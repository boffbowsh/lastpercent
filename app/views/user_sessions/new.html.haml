- clever_form_for @user_session, :url => user_session_path do |form|
  = form.text_field :email, :class => 'email'
  = form.password_field :password
  = form.text_field :openid_identifier, :class => 'url openid'
  = form.check_box :remember_me
  = form.submit "Login"
  = link_to "Forgot your password?", new_password_reset_path, :class => 'more'