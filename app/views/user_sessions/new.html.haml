- content_for :content_top do
  %h1= t('pages.login.title', :default => 'Sign in or register')
  %p.intro= t('pages.login.intro')
  
#login
  %h2= t('pages.login.signin.title', :default => 'Sign in')
  - clever_form_for @user_session, :url => user_session_path do |form|
    = form.text_field :email, :class => 'email'
    = form.password_field :password
    = form.text_field :openid_identifier, :class => 'url openid', :label => 'Your OpenID'
    = form.check_box :remember_me
    = form.submit "Login"
    = link_to "Forgot your password?", new_password_reset_path, :class => 'more'
    
#register
  %h2= t('pages.login.register.title', :default => 'Register')
  = render :partial => 'users/form'