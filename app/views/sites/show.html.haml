- javascript 'jquery.timer', 'site'
- breadcrumbs(link_to('Sites', sites_path), @site.to_s)

- content_for :content_top do
  %h1= @site
%p
  Assets:
  = link_to @site.assets.count, site_assets_path(@site), :class => 'assets_count'
%p
  Errors:
  = link_to @site.results.errors.count, site_results_path(@site), :class => 'errors_count'